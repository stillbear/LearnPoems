<view class="section">
  <view class="section__title">flex-direction: row</view>
  <view class="flex-wrp" style="flex-direction:row;">
    <button bindtap="text1">{{button[0]}}</button>
    <button bindtap="text2">{{button[1]}}</button>
    <button bindtap="text3">{{button[2]}}</button>
  </view>
</view>
<view class="section">
  <view class="section__title">flex-direction: column</view>
  <view class="flex-wrp" style="height: 300px;flex-direction:column;">
    <button bindtap="word1">1</button>
    <button bindtap="word2">2</button>
    <button bindtap="word3">3</button>
  </view>
</view>